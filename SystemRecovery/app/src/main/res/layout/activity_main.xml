        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="提示信息"/>


    <EditText
        android:id="@+id/creat_source"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />-->
    <RelativeLayout
        android:id="@+id/beginlayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#e5e9f4"
        android:layout_weight="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微信账号："
            android:textSize="32sp"
            android:textColor="@color/black"
            android:id="@+id/wechat"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wechat"
            android:textSize="32sp"
            android:textColor="@color/black"
            android:id="@+id/wechataccount"
            android:layout_toEndOf="@id/wechat"
            android:layout_centerVertical="true"/>
        <Button
            android:id="@+id/back_begin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上一步"
            android:textSize="32sp"
            android:textColor="@color/black"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"/>
        <Button
            android:id="@+id/back_system"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上一步"
            android:textSize="32sp"
            android:textColor="@color/black"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"/>
        <Button
            android:id="@+id/begin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="继续"
            android:textSize="32sp"
            android:textColor="@color/black"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>
        <Button
            android:id="@+id/system"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="继续"
            android:textSize="32sp"
            android:textColor="@color/black"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>
        <Button
            android:id="@+id/partition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="继续"
            android:textSize="32sp"
            android:textColor="@color/black"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>


</LinearLayout>